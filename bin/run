#!/usr/bin/env node
const Promise = require('bluebird');
const index = require('../index');
const s3 = require('../lib/s3');
const tempWrite = Promise.promisify(require('temp-write'));
const winston = require('../lib/winston');

Promise.resolve(index())
  .then(movies => tempWrite(JSON.stringify(movies)))
  .then(path => s3.uploadJson(path, 'movies.json'))
  .then(() => {
    process.exit(0);
  })
  .catch(err => {
    winston.error(err);
    process.exit(1);
  });
